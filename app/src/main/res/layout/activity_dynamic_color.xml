<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_all"
    tools:context="com.feicanled.wifi.activity.MainActivity" >

    <RelativeLayout
        android:id="@+id/relativeLayoutHeader"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/tab_height"
        android:layout_alignParentTop="true"
        android:background="@drawable/tab_bg" >

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:text="@string/back"
            android:textColor="@color/text_color_blue"
            android:textSize="@dimen/text_size4" />

        <!-- 
        <Button
            android:id="@+id/buttonRun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:text="@string/run"
            android:textColor="@color/text_color_blue"
            android:textSize="@dimen/text_size4" />
             -->
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayoutContainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/relativeLayoutHeader"
        android:gravity="center"
        android:background="@drawable/bg_all"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="@string/single_click_select_color"
                android:textSize="@dimen/text_size3" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutViewBlocks"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.ledble.view.ColorTextView
                    android:layout_width="@dimen/rect_dimen"
                    android:layout_height="@dimen/rect_dimen"
                    android:layout_marginLeft="@dimen/margin_mid"
                    android:layout_marginRight="@dimen/margin_mid"
                    android:background="@drawable/block_shap_color"
                    android:gravity="center"
                    android:tag="editColor1"
                    android:text="+"
                    android:textColor="#FFFFFF" />

                <com.ledble.view.ColorTextView
                    android:layout_width="@dimen/rect_dimen"
                    android:layout_height="@dimen/rect_dimen"
                    android:layout_marginLeft="@dimen/margin_mid"
                    android:layout_marginRight="@dimen/margin_mid"
                    android:background="@drawable/block_shap_color"
                    android:gravity="center"
                    android:tag="editColor2"
                    android:text="+"
                    android:textColor="#FFFFFF" />

                <com.ledble.view.ColorTextView
                    android:layout_width="@dimen/rect_dimen"
                    android:layout_height="@dimen/rect_dimen"
                    android:layout_marginLeft="@dimen/margin_mid"
                    android:layout_marginRight="@dimen/margin_mid"
                    android:background="@drawable/block_shap_color"
                    android:gravity="center"
                    android:tag="editColor3"
                    android:text="+"
                    android:textColor="#FFFFFF" />

                <com.ledble.view.ColorTextView
                    android:layout_width="@dimen/rect_dimen"
                    android:layout_height="@dimen/rect_dimen"
                    android:layout_marginLeft="@dimen/margin_mid"
                    android:layout_marginRight="@dimen/margin_mid"
                    android:background="@drawable/block_shap_color"
                    android:gravity="center"
                    android:tag="editColor4"
                    android:text="+"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.ledble.view.ColorTextView
                    android:layout_width="@dimen/rect_dimen"
                    android:layout_height="@dimen/rect_dimen"
                    android:layout_marginLeft="@dimen/margin_mid"
                    android:layout_marginRight="@dimen/margin_mid"
                    android:background="@drawable/block_shap_color"
                    android:gravity="center"
                    android:tag="editColor5"
                    android:text="+"
                    android:textColor="#FFFFFF" />

                <com.ledble.view.ColorTextView
                    android:layout_width="@dimen/rect_dimen"
                    android:layout_height="@dimen/rect_dimen"
                    android:layout_marginLeft="@dimen/margin_mid"
                    android:layout_marginRight="@dimen/margin_mid"
                    android:background="@drawable/block_shap_color"
                    android:gravity="center"
                    android:tag="editColor6"
                    android:text="+"
                    android:textColor="#FFFFFF" />

                <com.ledble.view.ColorTextView
                    android:layout_width="@dimen/rect_dimen"
                    android:layout_height="@dimen/rect_dimen"
                    android:layout_marginLeft="@dimen/margin_mid"
                    android:layout_marginRight="@dimen/margin_mid"
                    android:background="@drawable/block_shap_color"
                    android:gravity="center"
                    android:tag="editColor7"
                    android:text="+"
                    android:textColor="#FFFFFF" />

                <com.ledble.view.ColorTextView
                    android:layout_width="@dimen/rect_dimen"
                    android:layout_height="@dimen/rect_dimen"
                    android:layout_marginLeft="@dimen/margin_mid"
                    android:layout_marginRight="@dimen/margin_mid"
                    android:background="@drawable/block_shap_color"
                    android:gravity="center"
                    android:tag="editColor8"
                    android:text="+"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.ledble.view.ColorTextView
                    android:layout_width="@dimen/rect_dimen"
                    android:layout_height="@dimen/rect_dimen"
                    android:layout_marginLeft="@dimen/margin_mid"
                    android:layout_marginRight="@dimen/margin_mid"
                    android:background="@drawable/block_shap_color"
                    android:gravity="center"
                    android:tag="editColor9"
                    android:text="+"
                    android:textColor="#FFFFFF" />

                <com.ledble.view.ColorTextView
                    android:layout_width="@dimen/rect_dimen"
                    android:layout_height="@dimen/rect_dimen"
                    android:layout_marginLeft="@dimen/margin_mid"
                    android:layout_marginRight="@dimen/margin_mid"
                    android:background="@drawable/block_shap_color"
                    android:gravity="center"
                    android:tag="editColor10"
                    android:text="+"
                    android:textColor="#FFFFFF" />

                <com.ledble.view.ColorTextView
                    android:layout_width="@dimen/rect_dimen"
                    android:layout_height="@dimen/rect_dimen"
                    android:layout_marginLeft="@dimen/margin_mid"
                    android:layout_marginRight="@dimen/margin_mid"
                    android:background="@drawable/block_shap_color"
                    android:gravity="center"
                    android:tag="editColor11"
                    android:text="+"
                    android:textColor="#FFFFFF" />

                <com.ledble.view.ColorTextView
                    android:layout_width="@dimen/rect_dimen"
                    android:layout_height="@dimen/rect_dimen"
                    android:layout_marginLeft="@dimen/margin_mid"
                    android:layout_marginRight="@dimen/margin_mid"
                    android:background="@drawable/block_shap_color"
                    android:gravity="center"
                    android:tag="editColor12"
                    android:text="+"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.ledble.view.ColorTextView
                    android:layout_width="@dimen/rect_dimen"
                    android:layout_height="@dimen/rect_dimen"
                    android:layout_marginLeft="@dimen/margin_mid"
                    android:layout_marginRight="@dimen/margin_mid"
                    android:background="@drawable/block_shap_color"
                    android:gravity="center"
                    android:tag="editColor13"
                    android:text="+"
                    android:textColor="#FFFFFF" />

                <com.ledble.view.ColorTextView
                    android:layout_width="@dimen/rect_dimen"
                    android:layout_height="@dimen/rect_dimen"
                    android:layout_marginLeft="@dimen/margin_mid"
                    android:layout_marginRight="@dimen/margin_mid"
                    android:background="@drawable/block_shap_color"
                    android:gravity="center"
                    android:tag="editColor14"
                    android:text="+"
                    android:textColor="#FFFFFF" />

                <com.ledble.view.ColorTextView
                    android:layout_width="@dimen/rect_dimen"
                    android:layout_height="@dimen/rect_dimen"
                    android:layout_marginLeft="@dimen/margin_mid"
                    android:layout_marginRight="@dimen/margin_mid"
                    android:background="@drawable/block_shap_color"
                    android:gravity="center"
                    android:tag="editColor15"
                    android:text="+"
                    android:textColor="#FFFFFF" />

                <com.ledble.view.ColorTextView
                    android:layout_width="@dimen/rect_dimen"
                    android:layout_height="@dimen/rect_dimen"
                    android:layout_marginLeft="@dimen/margin_mid"
                    android:layout_marginRight="@dimen/margin_mid"
                    android:background="@drawable/block_shap_color"
                    android:gravity="center"
                    android:tag="editColor16"
                    android:text="+"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_weight="1"
                android:gravity="center" >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="50dip"
                    android:layout_weight="5"
                    android:gravity="center" >

                    <com.common.view.SegmentedRadioGroup
                        android:id="@+id/dynamicChangeButton"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/margin_mid"
                        android:checkedButton="@+id/button_one"
                        android:gravity="top|center"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/dynamicChangeButtonOne"
                            android:layout_height="match_parent"
                            android:button="@null"
                            android:gravity="center"
                            android:minWidth="40dip"
                            android:text="@string/jump"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                        <RadioButton
                            android:id="@+id/dynamicChangeButtonTwo"
                            android:layout_height="match_parent"
                            android:button="@null"
                            android:gravity="center"
                            android:minWidth="40dip"
                            android:text="@string/breathe"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                        <RadioButton
                            android:id="@+id/dynamicChangeButtonThree"
                            android:layout_height="match_parent"
                            android:button="@null"
                            android:gravity="center"
                            android:minWidth="40dip"
                            android:text="@string/flash"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
                        
                        <RadioButton
                            android:id="@+id/dynamicChangeButtonFour"
                            android:button="@null"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:minWidth="40dip"
                            android:text="@string/gradient"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
                        

                    </com.common.view.SegmentedRadioGroup>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dip"
                    android:layout_weight="1.5"
                    android:gravity="center" >

                    <Button
                        android:id="@+id/button1"
                        android:layout_marginRight="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/run" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical" >

                <SeekBar
                    android:id="@+id/seekBarBrightNess2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="50"
                    android:thumb="@drawable/slider_thumb" />

                <TextView
                    android:id="@+id/textViewBrightNess2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="@string/sensitivity"
                    android:textSize="@dimen/text_size3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>

        
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeTabColorCover"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_all"
        android:orientation="vertical"
        
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/linarLayoutColorCile"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="50dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/tvRGB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:text="@string/r_g_b"
                    android:textColor="@color/white" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="fill_parent"
                 android:layout_marginTop="20dp"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="vertical" >

                <com.ledble.view.MyColorPickerImageView4RGB
                    android:id="@+id/imageViewPicker"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/tvRingBrightnessSC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:text="@string/brightness"
                        android:textColor="@color/white" />
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1" >

                    <com.ledble.view.BlackWiteSelectView
                        android:id="@+id/blackWiteSelectView"
                        android:layout_width="fill_parent"
                        android:layout_height="25dp"
                        android:layout_margin="@dimen/margin_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/viewColors"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <View
                        android:id="@+id/viewColor1"
                        android:layout_width="@dimen/color_block_size"
                        android:layout_height="@dimen/color_block_size"
                        android:layout_marginLeft="@dimen/margin_mid"
                        android:layout_marginRight="@dimen/margin_mid"
                        android:background="@drawable/color_block_shap_red"
                        android:tag="viewColor1" />

                    <View
                        android:id="@+id/viewColor2"
                        android:layout_width="@dimen/color_block_size"
                        android:layout_height="@dimen/color_block_size"
                        android:layout_marginLeft="@dimen/margin_mid"
                        android:layout_marginRight="@dimen/margin_mid"
                        android:background="@drawable/color_block_shap_yellow"
                        android:tag="viewColor2" />

                    <View
                        android:id="@+id/viewColor3"
                        android:layout_width="@dimen/color_block_size"
                        android:layout_height="@dimen/color_block_size"
                        android:layout_marginLeft="@dimen/margin_mid"
                        android:layout_marginRight="@dimen/margin_mid"
                        android:background="@drawable/color_block_shap_green"
                        android:tag="viewColor3" />

                    <View
                        android:id="@+id/viewColor4"
                        android:layout_width="@dimen/color_block_size"
                        android:layout_height="@dimen/color_block_size"
                        android:layout_marginLeft="@dimen/margin_mid"
                        android:layout_marginRight="@dimen/margin_mid"
                        android:background="@drawable/color_block_shap_crystal"
                        android:tag="viewColor4" />

                    <View
                        android:id="@+id/viewColor5"
                        android:layout_width="@dimen/color_block_size"
                        android:layout_height="@dimen/color_block_size"
                        android:layout_marginLeft="@dimen/margin_mid"
                        android:layout_marginRight="@dimen/margin_mid"
                        android:background="@drawable/color_block_shap_blue"
                        android:tag="viewColor5" />

                    <View
                        android:id="@+id/viewColor6"
                        android:layout_width="@dimen/color_block_size"
                        android:layout_height="@dimen/color_block_size"
                        android:layout_marginLeft="@dimen/margin_mid"
                        android:layout_marginRight="@dimen/margin_mid"
                        android:background="@drawable/color_block_shap_pink"
                        android:tag="viewColor6" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center" >

                <Button
                    android:id="@+id/buttonConfirm"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_content"
                    android:layout_marginRight="@dimen/margin_content"
                    android:text="@string/confirm" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>